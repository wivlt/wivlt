# frozen_string_literal: true

source 'https://rubygems.org'

ruby '3.4.2'

# CLI interface components (e.g., prompts, spinners)
gem 'cli-ui', '~> 2.3'
# Lightweight key-value store for simple persistence
gem 'daybreak', '~> 0.3.0'
# Efficient and thread-safe code loader for Ruby
gem 'zeitwerk', '~> 2.7'
group :development, :test do
  # Behavior-driven development framework for testing
  gem 'rspec', '~> 3.13'

  # Static code analyzer and formatter based on the Ruby style guide
  gem 'rubocop', '~> 1.75', require: false
end
